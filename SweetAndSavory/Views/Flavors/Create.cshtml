@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor

<h4>Add a new flavor</h4>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.FlavorName)
  @Html.TextBoxFor(model => model.FlavorName)

  <input type="submit" value="Add new flavor" class="btn btn-secondary" />
}
<p>@Html.ActionLink("Back to flavors page", "Index")</p>