@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h4>Add a new Treat</h4>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)

  <input type="submit" value="Add new Treat" class="btn btn-secondary" />
}
<p>@Html.ActionLink("Back to Treats page", "Index")</p>